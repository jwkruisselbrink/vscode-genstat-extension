{
    "comments": {
        "lineComment": "\\",
        "blockComment": [ "\"", "\"" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(((i|I)(f|F))|((f|F)(o|O)(r|R))|((e|E)(l|L)(s|S)(e|E))|((e|E)(l|L)(s|S)(i|I)(f|F))).*$",
        "decreaseIndentPattern": "^\\s*(((e|E)(n|N)(d|D)(i|I)(f|F))|((e|E)(n|N)(d|D)(f|F)(o|O)(r|R))|((e|E)(l|L)(s|S)(e|E))|((e|E)(l|L)(s|S)(i|I)(f|F))).*$"
    }
}
